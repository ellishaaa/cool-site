version: 0.2

phases:
    pre_build:
        commands:
            - npm install
            - pwd && find . -name "buildspec.yml"
    build:
        commands: 
            - pwd && find . -name "buildspec.yml"
            - npm run build
    post_build:
        commands:
            - aws s3 cp --recursive ./build s3://www.bucketgang/
            - aws cloudfront create-invalidation --distribution-id E2LWYYX50K8Q2 --path /\*