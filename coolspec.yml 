version: 0.2
phases:
    pre_build:
        commands:
            - npm install
    build:
        commands:
            - sudo npm run build --force
    post_build:
        commands:
            - aws s3 cp --recursive ./build s3://www.bucketgang/
            - aws cloudfront create-invalidation --distribution-id E2LWYYX50K8Q2 --path /\*